{
  "compilerOptions": {
    "outDir": "./dist/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ]
  },
  "include": [
    "./types/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.json"
  ]
}
